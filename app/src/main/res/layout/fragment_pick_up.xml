<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.PickUpFragment">


    <Button
        android:id="@+id/pickUpCloseButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/pickUpScreenHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/intersemibold"
        android:text="Please select a pickup method"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verifyByCodeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bordered_button_green"
        android:drawableTop="@drawable/ic_baseline_keyboard_24"
        android:fontFamily="@font/intermedium"
        android:padding="10dp"
        android:text="Verify via code to pick-up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickUpScreenHeader"
        app:layout_constraintWidth_percent="0.12" />

    <Button
        android:id="@+id/verifyByFace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.6"
        android:layout_marginStart="9dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bordered_button_red"
        android:drawableTop="@drawable/ic_baseline_tag_faces_24"
        android:fontFamily="@font/intermedium"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Face recognition to pick-up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verifyByCodeBtn"
        app:layout_constraintTop_toBottomOf="@+id/pickUpScreenHeader" />

    <Button
        android:id="@+id/verifyBySwipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.6"
        android:layout_marginStart="9dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bordered_button_purple"
        android:drawableTop="@drawable/ic_baseline_credit_card_24"
        android:fontFamily="@font/intermedium"
        android:padding="10dp"
        android:text="Swipe to pick-up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verifyByFace"
        app:layout_constraintTop_toBottomOf="@+id/pickUpScreenHeader" />

    <Button
        android:id="@+id/verifyByAcoount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bordered_button_turqoise"
        android:drawableTop="@drawable/ic_baseline_account_circle_24"
        android:fontFamily="@font/intermedium"
        android:padding="10dp"
        android:text="Swipe to pick-up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toEndOf="@+id/verifyBySwipe"
        app:layout_constraintTop_toBottomOf="@+id/pickUpScreenHeader"
        app:layout_constraintWidth_percent="0.12" />
</androidx.constraintlayout.widget.ConstraintLayout>