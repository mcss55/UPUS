<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.PickUpVerificationCodeFragment">


    <LinearLayout
        android:id="@+id/otpTextsLayout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">

        <EditText
            android:textAlignment="center"
            android:id="@+id/box1"
            android:layout_width="10dp"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />

        <EditText
            android:id="@+id/box2"
            android:textAlignment="center"
            android:layout_width="10dp"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />

        <EditText
            android:id="@+id/box3"
            android:layout_width="10dp"
            android:textAlignment="center"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />

        <EditText
            android:id="@+id/box4"
            android:layout_width="10dp"
            android:textAlignment="center"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />

        <EditText
            android:id="@+id/box5"
            android:layout_width="10dp"
            android:textAlignment="center"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />

        <EditText
            android:id="@+id/box6"
            android:layout_width="10dp"
            android:layout_height="190dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/edit_text_otp"
            android:ems="10"
            android:inputType="number"
            android:textSize="84sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpTextsLayout"
        android:layout_marginTop="25dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:paddingBottom="30dp"
        android:columnOrderPreserved="false"
        android:rowCount="4"
        android:padding="30dp"
        android:useDefaultMargins="true">

        <!-- First row -->
        <Button
            android:id="@+id/numpadButton1"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton2"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton3"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <!-- Second row -->
        <Button
            android:id="@+id/numpadButton4"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton5"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton6"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <!-- Third row -->
        <Button
            android:id="@+id/numpadButton7"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton8"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton9"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <!-- Fourth row -->
        <Button
            android:id="@+id/numpadButtonDelete"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_red"
            android:drawableStart="@drawable/baseline_clear_24"
            android:text="Clear"
            android:textColor="@color/white"
            android:onClick="onClearButtonClick"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButton0"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/bordered_button_green"
            android:onClick="onNumpadButtonClick"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <Button
            android:id="@+id/numpadButtonSubmit"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:background="@drawable/button_rounded_dark_green"
            android:text="TÉ™sdiq et"
            android:textColor="@color/white"
            android:textSize="54sp" />

    </GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kodu daxil edin"
        android:fontFamily="@font/intersemibold"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        android:textSize="90sp" />

    <ImageView
        android:id="@+id/closeButtonPickUpVfCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:onClick="closeFragment"
        android:layout_marginRight="30dp"
        android:src="@drawable/baseline_clear_24_black" />


</RelativeLayout>