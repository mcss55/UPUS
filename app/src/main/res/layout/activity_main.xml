<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/customActionBar"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_actionbar_transparent" />

    <ImageView
        android:id="@+id/mapLogoBtn"
        android:layout_width="94dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintEnd_toStartOf="@+id/countryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_share_location_24" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/intermedium"
        android:text="Azerbaijan"
        android:textColor="@color/white"
        android:textSize="58sp"
        app:layout_constraintStart_toEndOf="@+id/mapLogoBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameForActionBar"
        android:layout_width="352dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/interregular"
        android:text="Azerbaijan [A0073001]"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintStart_toEndOf="@+id/mapLogoBtn"
        app:layout_constraintTop_toBottomOf="@+id/countryName"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/settingsBtn"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintEnd_toEndOf="@+id/customActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_settings_24" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/interregular"
        android:text="Time"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintEnd_toStartOf="@+id/settingsBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/languageBtnRU"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/interregular"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toStartOf="@+id/settingsBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/languageBtnRU"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/peopleImage"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="686dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customActionBar"
        app:srcCompat="@drawable/people" />

    <TextView
        android:id="@+id/upusWordMainScreen"
        android:layout_width="421dp"
        android:layout_height="110dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/interbold"
        android:text="UPUS"
        android:textAlignment="center"
        android:textColor="@color/pantone_7672c_main_color"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peopleImage" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="313dp"
        android:fontFamily="@font/intermedium"
        android:text="Unlock Possibilities, Retrieve with Ease! ❤"
        android:textColor="@color/pantone_7672c_main_color_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upusWordMainScreen" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"

        android:layout_height="1050dp"
        android:layout_marginTop="560dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>

    <Button
        android:id="@+id/languageBtnRU"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginStart="19dp"
        android:background="#20FFFFFF"
        android:drawableLeft="@drawable/russia"
        android:fontFamily="@font/interbold"
        android:paddingStart="10dp"
        android:text="RU"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintStart_toEndOf="@+id/languageBtnEN"
        app:layout_constraintTop_toTopOf="@+id/customActionBar" />

    <Button
        android:id="@+id/languageBtnEN"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginStart="20dp"
        android:background="#20FFFFFF"
        android:drawableLeft="@drawable/united_kingdom"
        android:fontFamily="@font/interbold"
        android:paddingStart="10dp"
        android:text="EN"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintStart_toEndOf="@+id/languageBtnAZ"
        app:layout_constraintTop_toTopOf="@+id/customActionBar" />

    <Button
        android:id="@+id/languageBtnAZ"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginStart="49dp"
        android:background="#20FFFFFF"
        android:drawableLeft="@drawable/azerbaijan"
        android:fontFamily="@font/interbold"
        android:paddingStart="10dp"
        android:text="AZ"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/customActionBar"
        app:layout_constraintStart_toEndOf="@+id/userNameForActionBar"
        app:layout_constraintTop_toTopOf="@+id/customActionBar" />

</androidx.constraintlayout.widget.ConstraintLayout>