<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.LatticeSelectionFragment"
    android:paddingBottom="10dp"
    >

    <ScrollView
        android:id="@+id/scrollViewCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/customTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/intersemibold"
                    android:layout_marginEnd="43dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text="Type"
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/intersemibold"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Available"
                    android:textColor="@color/black"
                    android:textSize="36sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/intersemibold"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="42sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/typeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="43dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/intermedium"
                    android:text="Small box"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/latticeNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="43dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/intermedium"
                    android:text="32"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/buttonDecrease"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="26sp"
                    android:background="@drawable/bordered_button_red"
                    />

                <TextView
                    android:id="@+id/textViewNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_corner_textview"
                    android:textSize="20sp"
                    android:layout_weight="0.37"
                    android:gravity="center" />

                <Button
                    android:layout_width="60dp"
                    android:id="@+id/buttonIncrease"
                    android:layout_marginEnd="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_button_green"
                    android:textSize="26sp"
                    android:text="+" />

            </TableRow>

        </TableLayout>
    </ScrollView>
    <Button
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordered_button_green"
        android:text="Next step"
        android:layout_marginStart="220dp"
        android:layout_below="@+id/scrollViewCustom"/>

</RelativeLayout>